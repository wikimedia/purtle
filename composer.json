{
	"name": "wikimedia/purtle",
	"type": "library",
	"description": "Fast streaming RDF serializer",
	"keywords": [
		"JSON-LD",
		"RDF",
		"Serializer",
		"Turtle"
	],
	"homepage": "https://mediawiki.org/wiki/Purtle",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Daniel Kinzler"
		},
		{
			"name": "Stanislav Malyshev"
		},
		{
			"name": "Thiemo Kreuz"
		},
		{
			"name": "C. Scott Ananian"
		}
	],
	"support": {
		"irc": "irc://irc.freenode.net/wikimedia-dev"
	},
	"require": {
		"php": ">=7.2.9"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "1.0.0",
		"jakub-onderka/php-console-highlighter": "0.4.0",
		"mediawiki/mediawiki-codesniffer": "30.0.0",
		"ockcyp/covers-validator": "1.1.1",
		"phpunit/phpunit": "^8.5",
		"phpmd/phpmd": "~2.3",
		"mediawiki/minus-x": "1.0.0"
	},
	"autoload": {
		"psr-4": {
			"Wikimedia\\Purtle\\": "src/",
			"Wikimedia\\Purtle\\Tests\\": "tests/phpunit/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.0.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"minus-x check ."
		],
		"cs": [
			"phpcs -p -s",
			"phpmd src/ text phpmd.xml"
		],
		"ci": [
			"@cs",
			"@test"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
